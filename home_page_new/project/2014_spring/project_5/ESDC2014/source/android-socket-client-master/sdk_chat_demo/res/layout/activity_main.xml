<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/open"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:layout_marginTop="5.0dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_primary_selector"
                android:text="连接"
                android:textColor="@android:color/white" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.96" >

                <Button
                    android:id="@+id/start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_marginTop="5.0dp"
                    android:layout_weight="0.89"
                    android:background="@drawable/button_primary_selector"
                    android:text="start"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/compass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_marginTop="5.0dp"
                    android:layout_weight="0.89"
                    android:background="@drawable/button_danger_selector"
                    android:text="方向校准"
                    android:textColor="@android:color/white" />
            </FrameLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:layout_weight="0.60"
                android:ems="10"
                android:gravity="center"
                android:hint="status"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/reset"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:layout_marginTop="5.0dp"
                android:layout_weight="0.36"
                android:background="@drawable/button_primary_selector"
                android:text="重置"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:layout_marginTop="5.0dp"
                android:layout_weight="0.93"
                android:background="@drawable/button_primary_selector"
                android:text="下一页"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.46" >

                    <Button
                        android:id="@+id/comfrim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dp"
                        android:layout_weight="0.46"
                        android:background="@drawable/button_primary_selector"
                        android:text="确定"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/mback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dp"
                        android:layout_weight="0.46"
                        android:background="@drawable/button_primary_selector"
                        android:text="退后"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/FrameLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.46" >

                    <Button
                        android:id="@+id/pattern1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_weight="0.03"
                        android:background="@drawable/button_primary_selector"
                        android:text="远景－右"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/single"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_weight="0.03"
                        android:background="@drawable/button_primary_selector"
                        android:text="单人"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/pattern5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_weight="0.03"
                        android:background="@drawable/button_primary_selector"
                        android:text="近景"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/pattern8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_weight="0.03"
                        android:background="@drawable/button_primary_selector"
                        android:text="近景"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.46" >

                    <Button
                        android:id="@+id/pattern2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_weight="0.03"
                        android:background="@drawable/button_primary_selector"
                        android:text="远景－左"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/ddouble"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:background="@drawable/button_primary_selector"
                        android:text="双人"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/pattern6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_weight="0.03"
                        android:background="@drawable/button_primary_selector"
                        android:text="远景"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/pattern9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_weight="0.03"
                        android:background="@drawable/button_primary_selector"
                        android:text="远景"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.46" >

                    <Button
                        android:id="@+id/pattern3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_weight="0.03"
                        android:background="@drawable/button_primary_selector"
                        android:text="对角线构图"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/multiple"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_weight="0.46"
                        android:background="@drawable/button_primary_selector"
                        android:text="多人"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/pattern7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_weight="0.03"
                        android:background="@drawable/button_primary_selector"
                        android:text="pattern7"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/pattern10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_weight="0.03"
                        android:background="@drawable/button_primary_selector"
                        android:text="pattern10"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.46" >

                    <Button
                        android:id="@+id/pattern4"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_margin="@dimen/default_margin"
                        android:background="@drawable/button_primary_selector"
                        android:text="近景－左"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/video"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="@dimen/default_margin"
                        android:background="@drawable/button_primary_selector"
                        android:text="录像"
                        android:textColor="@android:color/white" />
                </FrameLayout>

                <Button
                    android:id="@+id/pdiy"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_weight="3300.79"
                    android:background="@drawable/button_primary_selector"
                    android:text="自定义"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="432dp"
                android:layout_height="324dp" 
                android:topLeftRadius="10dp"   
            	 android:topRightRadius="10dp"    
            	 android:bottomRightRadius="10dp"   
             	android:bottomLeftRadius="10dp"
                android:layout_margin="@dimen/no_margin">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="432dp"
                    android:layout_height="324dp"
                    android:topLeftRadius="10dp"   
            	 android:topRightRadius="10dp"    
            	 android:bottomRightRadius="10dp"   
             	android:bottomLeftRadius="10dp"
                    android:src="@drawable/cuhk" />

                <WebView
                    android:id="@+id/webView2"
                    android:layout_width="432dp"
                    android:layout_height="324dp"
                    android:topLeftRadius="10dp"   
            	 android:topRightRadius="10dp"    
            	 android:bottomRightRadius="10dp"   
             	android:bottomLeftRadius="10dp"
                   />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                  
                        <RadioGroup
                            android:id="@+id/styleGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <RadioButton
                                android:id="@+id/s1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="普通" />

                            <RadioButton
                                android:id="@+id/s2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="清新" />

                            <RadioButton
                                android:id="@+id/s3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="复古" />
                        </RadioGroup>
                 

                    <TextView
                        android:id="@+id/roll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="roll:0" />

                    <SeekBar
                        android:id="@+id/rollBar"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/pitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pitch:0" />

                    <SeekBar
                        android:id="@+id/pitchBar"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content" />

                      <RadioGroup
                        android:id="@+id/handGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    
                    <RadioButton
                        android:id="@+id/nohand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="无手势" />

                    <RadioButton
                        android:id="@+id/hand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有手势" />
                    
                       </RadioGroup>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>